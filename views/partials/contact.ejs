
    <form id="kontakt" action="/contact" method="POST">
          
            <input class="formInput" type="text" name="firstName" minlength="2" required placeholder="vorname">
          
            <input class="formInput" type="text" name="lastName" minlength="2" required placeholder="nachname">
          
            <input class="formInput" type="email" name="email" required placeholder="email">
            
            <textarea class="formInput" name="message" required placeholder="bitte hier ihre nachricht schreiben"></textarea>
          
